@model ABCRetailers.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create an Account";
}

<div class="card shadow-lg mt-4" style="max-width: 700px; margin: auto;">
    <!-- 🔥 MATCH LOGIN PAGE: BLACK HEADER -->
    <div class="card-header bg-dark text-white text-center py-3">
        <h2 class="mb-0">
            <i class="fas fa-user-plus"></i> Create an Account
        </h2>
    </div>

    <div class="card-body">
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option>Customer</option>
                        <option>Admin</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingAddress" class="form-label"></label>
                <textarea asp-for="ShippingAddress" class="form-control"></textarea>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <!-- 🔥 MATCH LOGIN BUTTON: SOLID BLUE -->
            <button type="submit" class="btn btn-primary btn-lg w-100">
                Register
            </button>
        </form>

        <div class="text-center mt-3">
            Already have an account?
            <a asp-action="Index" class="fw-bold">Login here.</a>
        </div>
    </div>

    <!-- Footer (same style as Login) -->
    <div class="card-footer text-center text-muted small">
        © 2025 – ABC Retailers
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
